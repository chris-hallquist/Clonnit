<br />
<div>
	<button class="reply btn btn-primary" data-id=<%= parent.id %>>Reply</button>
</div>
<ul class="list-group">
	<% comments.each(function (comment) { %>
		<% var parentID = comment.get('parent_id') %>
		<% if (parentID && parentID === parent.id ) { %>
			<br />
			<li class="list-group-item">
			<p><b>Submitted by <%= comment.escape('authorUsername') %></b></p>
			<p><%= comment.escape('body') %></p>
			<%= JST['nested']({ comments: comments, parent: comment }) %></li>
		<% } %>
	<% }); %>
</ul>