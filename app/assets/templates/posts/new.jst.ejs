<h1>Add Post</h1>
<form id="add-post">
	<div class="form-group">
		<input
			type="hidden"
			value=<%= subclonID %>
			name="post[subclon_id]">

		<label>Title</label>
		<input
		  type="text"
		  name="post[title]"
			class="form-control"
			placeholder="Required">

		<label>Link URL</label>
		<input
			type="text"
			name="post[link_url]"
			class="form-control"
			placeholder="Optional (posts without a link will be treated as self posts)">

		<label>Body</label>	
		<textarea
			name="post[body]"
			rows="4"
			class="form-control"
			placeholder="Optional"></textarea><br />

		<button class="add-post btn btn-primary">Add Post</button>
	</div>
</form>
<a href="#/subclons/<%= subclonID %>">
	Back to <%= Clonnit.Data.subclons.get(subclonID).escape('name') %>
</a>